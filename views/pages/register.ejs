<div
  class="flex flex-col items-center mx-auto max-w-md p-6 bg-white rounded shadow"
>
  <h3 class="text-2xl font-bold mb-2">Inscrivez-vous</h3>
  <p class="text-gray-600 mb-6">Connectez-vous à votre compte</p>

  <form
    action="/users/register"
    method="post"
    class="flex flex-col w-full space-y-4"
  >
    <div>
      <label for="username" class="block text-sm font-medium">Username</label>
      <input
        type="text"
        name="username"
        id="username"
        placeholder="Username"
        class="mt-1 w-full border border-gray-300 rounded px-3 py-2"
        required
      />
    </div>

    <div>
      <label for="email" class="block text-sm font-medium">Email</label>
      <input
        type="email"
        name="email"
        id="email"
        placeholder="Email"
        class="mt-1 w-full border border-gray-300 rounded px-3 py-2"
        required
      />
    </div>

    <div>
      <label for="password" class="block text-sm font-medium"
        >Mot de passe</label
      >
      <input
        type="password"
        name="password"
        id="password"
        placeholder="Mot de passe"
        class="mt-1 w-full border border-gray-300 rounded px-3 py-2"
        required
      />
    </div>
    <div>
      <label for="confirmPassword" class="block text-sm font-medium">
        Confirmation du mot de passe
      </label>
      <input
        type="password"
        name="confirmPassword"
        id="confirmPassword"
        placeholder="Confirmez le mot de passe"
        class="mt-1 w-full border border-gray-300 rounded px-3 py-2"
        required
      />
    </div>
    <div>
      <label class="block text-sm font-medium mb-1">Accessibilité</label>
      <div class="flex flex-wrap gap-2">
        <label
          ><input type="checkbox" name="accessibilite[]" value="Sourd" />
          Sourd</label
        >
        <label
          ><input type="checkbox" name="accessibilite[]" value="Aveugle" />
          Aveugle</label
        >
        <label
          ><input type="checkbox" name="accessibilite[]" value="Sourd-Muet" />
          Sourd-Muet</label
        >
        <label
          ><input type="checkbox" name="accessibilite[]" value="Malvoyant" />
          Malvoyant</label
        >
        <label
          ><input type="checkbox" name="accessibilite[]" value="Malentendant" />
          Malentendant</label
        >
        <label
          ><input type="checkbox" name="accessibilite[]" value="Daltonien" />
          Daltonien</label
        >
        <label
          ><input type="checkbox" name="accessibilite[]" value="Non défini" />
          Non défini</label
        >
      </div>
    </div>

    <div>
      <button
        type="submit"
        class="w-full bg-blue-600 text-white rounded py-2 hover:bg-blue-700 transition"
      >
        S'inscrire
      </button>
    </div>
  </form>
</div>
